generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Expense {
  id      String  @id @default(uuid())
  desc    String
  amount  Decimal @db.Decimal(9, 2)
  group   Group?  @relation(fields: [groupId], references: [id])
  groupId String?

  @@index([groupId])
}

model Group {
  id      String    @id @default(uuid())
  title   String
  type    String?
  Expense Expense[]
}
